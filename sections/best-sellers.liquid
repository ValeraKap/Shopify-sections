<style type="text/css">
    {% render 'common-css' with section as section %}

    /* Section container styles */
    #s--{{section.id}} .best-sellers__container {
        display: grid;
        grid-template-columns: 1fr 1fr;
        gap: 40px;
        align-items: center;
        width: 100%;
        padding: 20px;
    }

    @media screen and (max-width: 767px) {
        #s--{{section.id}} .best-sellers__container {
            grid-template-columns: 1fr;
            gap: 30px;
        }
    }

    /* Subtitle styles */
    #s--{{section.id}} .best-sellers__subtitle {
        font-size: 16px;
        color: #535353;
        margin-bottom: 8px;
        font-weight: 400;
        line-height: 24px;
    }

    #s--{{section.id}} .best-sellers__title {
        font-size: 38px;
        font-weight: 500;
        margin-bottom: 48px;
        color: #000;
        line-height: 46px;
    }

    @media screen and (max-width: 767px) {
        #s--{{section.id}} .best-sellers__subtitle {
            font-size: 12px;
        }

        #s--{{section.id}} .best-sellers__title {
            font-size: 24px;
            margin-bottom: 20px;
        }
    }

    #s--{{section.id}} .best-sellers__collection-item {
        cursor: pointer;
        padding: 24px;
        border-bottom: 1px solid #DCDCDC;
        transition: color 0.3s ease;
        display: flex;
        justify-content: space-between;
        align-items: center;
        user-select: none;
        font-size: 28px;
        line-height: 34px;
        font-weight: 500;
        gap: 16px;
        background: #FFFFFF;
    }

    #s--{{section.id}} .best-sellers__collection-item:hover {
        color: #000;
    }

    #s--{{section.id}} .best-sellers__collection-item.active {
        color: #000;
        font-weight: bold;
        border-bottom: 1px solid #292929;
    }

    #s--{{section.id}} .best-sellers__collection-item:not(.active) {
        color: #999;
    }

    #s--{{section.id}} .best-sellers__collection-item span {
        font-size: 24px;
        width: 24px;
        height: 24px;
        display: flex;
        align-items: center;
        justify-content: center;
        flex-shrink: 0;
    }

    @media screen and (max-width: 767px) {
        #s--{{section.id}} .best-sellers__collection-item {
            font-size: 18px;
            line-height: 1.4;
            padding: 15px 0;
        }

        #s--{{section.id}} .best-sellers__collection-item span {
            font-size: 18px;
        }
    }

    /* Product display styles */
    #s--{{section.id}} .best-sellers__product {
        position: relative;
        min-height: 400px;
    }

    #s--{{section.id}} .best-sellers__product-content {
        display: none;
        opacity: 0;
        transition: opacity 0.3s ease;
    }

    #s--{{section.id}} .best-sellers__product-content.active {
        display: block;
        opacity: 1;
    }

    #s--{{section.id}} .best-sellers__product-image {
        position: relative;
        width: 100%;
        margin-bottom: 20px;
        border-radius: 16px;
        overflow: hidden;
        border: 1px solid #e5e5e5;
    }

    #s--{{section.id}} .best-sellers__product-image img {
        width: 100%;
        height: auto;
        display: block;
    }

    #s--{{section.id}} .best-sellers__product-image picture {
        display: block;
        width: 100%;
    }

    #s--{{section.id}} .best-sellers__product-image a {
        display: block;
        width: 100%;
        position: relative;
        z-index: 0;
    }

    #s--{{section.id}} .best-sellers__product-image .best-sellers__placeholder {
        width: 100%;
        height: auto;
        display: block;
    }

    /* Product tags styles */
    #s--{{section.id}} .best-sellers__product-tags {
        display: flex;
        flex-direction: column;
        align-items: flex-start;
        padding: 0;
        gap: 4px;
        position: absolute;
        width: auto;
        height: auto;
        left: 16px;
        top: 16px;
        z-index: 3;
        pointer-events: auto;
    }

    #s--{{section.id}} .best-sellers__product-tag {
        display: inline-block;
        padding: 6px 12px;
        font-size: 12px;
        font-weight: 600;
        text-transform: uppercase;
        border-radius: 4px;
        white-space: nowrap;
        background-color: #FFFFFF;
        color: #000000;
        border: 1px solid #999999;
        line-height: 1.2;
        cursor: default;
        pointer-events: auto;
        user-select: none;
    }

    #s--{{section.id}} .best-sellers__product-tag.tag--sale {
        background-color: #E41616;
        color: #FFFFFF;
        border: 1px solid #E41616;
    }

    @media screen and (max-width: 767px) {
        #s--{{section.id}} .best-sellers__product-tags {
            top: 10px;
            left: 10px;
            gap: 4px;
        }

        #s--{{section.id}} .best-sellers__product-tag {
            padding: 5px 10px;
            font-size: 11px;
        }
    }

    /* Product action buttons (heart and eye) */
    #s--{{section.id}} .best-sellers__product-actions {
        position: absolute;
        top: 16px;
        right: 16px;
        display: flex;
        flex-direction: column;
        gap: 8px;
        z-index: 3;
    }

    #s--{{section.id}} .best-sellers__product-action-btn {
        width: 48px;
        height: 48px;
        border-radius: 12px;
        background-color: #FFFFFF;
        border: 1px solid #DCDCDC;
        cursor: pointer;
        display: flex;
        align-items: center;
        justify-content: center;
        transition: all 0.3s ease;
        padding: 12px;
    }

    #s--{{section.id}} .best-sellers__product-action-btn:hover {
        background-color: #f5f5f5;
        border-color: #000;
    }

    #s--{{section.id}} .best-sellers__product-action-btn:disabled {
        opacity: 0.5;
        cursor: not-allowed;
        pointer-events: none;
    }

    #s--{{section.id}} .best-sellers__product-action-btn svg {
        width: 24px;
        height: 24px;
        stroke: #000;
        fill: none;
        stroke-width: 1.5px;
        stroke-linecap: round;
        stroke-linejoin: round;
    }

    @media screen and (max-width: 767px) {
        #s--{{section.id}} .best-sellers__product-actions {
            top: 10px;
            right: 10px;
            gap: 8px;
        }

        #s--{{section.id}} .best-sellers__product-action-btn {
            width: 32px;
            height: 32px;
            border-radius: 6px;
        }

        #s--{{section.id}} .best-sellers__product-action-btn svg {
            width: 16px;
            height: 16px;
        }
    }

    /* Product info styles - overlay on image */
    #s--{{section.id}} .best-sellers__product-info {
        display: flex;
        flex-direction: row;
        align-items: center;
        padding: 24px 32px;
        gap: 10px;
        position: absolute;
        width: calc(100% - 32px);
        max-width: 784px;
        height: 72px;
        left: 16px;
        bottom: 16px;
        background: #FFFFFF;
        border-radius: 16px;
        z-index: 5;
        overflow: hidden;
        box-sizing: border-box;
    }

    #s--{{section.id}} .best-sellers__product-title {
        width: auto;
        height: 24px;
        font-family: 'Inter', -apple-system, BlinkMacSystemFont, 'Segoe UI', sans-serif;
        font-style: normal;
        font-weight: 500;
        font-size: 16px;
        line-height: 24px;
        color: #000000;
        flex: none;
        order: 0;
        flex-grow: 1;
        flex-shrink: 1;
        min-width: 0;
        margin: 0;
        display: flex;
        align-items: center;
        overflow: hidden;
    }

    #s--{{section.id}} .best-sellers__product-title a {
        color: #000;
        text-decoration: none;
        transition: color 0.3s ease;
        overflow: hidden;
        text-overflow: ellipsis;
        white-space: nowrap;
        display: block;
        width: 100%;
    }

    #s--{{section.id}} .best-sellers__product-title a:hover {
        color: #666;
    }

    #s--{{section.id}} .best-sellers__product-price {
        display: flex;
        flex-direction: row;
        align-items: center;
        padding: 0;
        gap: 8px;
        width: auto;
        height: 24px;
        flex: none;
        order: 1;
        flex-grow: 0;
    }

    #s--{{section.id}} .best-sellers__product-price .price-current {
        width: auto;
        height: 24px;
        font-family: 'Inter', -apple-system, BlinkMacSystemFont, 'Segoe UI', sans-serif;
        font-style: normal;
        font-weight: 500;
        font-size: 16px;
        line-height: 24px;
        color: #E41616;
        flex: none;
        order: 0;
        flex-grow: 0;
        display: flex;
        align-items: center;
    }

    #s--{{section.id}} .best-sellers__product-price .price-compare {
        width: auto;
        height: 22px;
        font-family: 'Inter', -apple-system, BlinkMacSystemFont, 'Segoe UI', sans-serif;
        font-style: normal;
        font-weight: 400;
        font-size: 16px;
        line-height: 22px;
        text-decoration-line: line-through;
        color: #9D9D9D;
        flex: none;
        order: 1;
        flex-grow: 0;
        display: flex;
        align-items: center;
    }

    @media screen and (min-width: 768px) and (max-width: 1024px) {
        #s--{{section.id}} .best-sellers__product-info {
            padding: 20px 24px;
            gap: 8px;
        }

        #s--{{section.id}} .best-sellers__product-title {
            font-size: 14px;
            line-height: 20px;
        }

        #s--{{section.id}} .best-sellers__product-price .price-current,
        #s--{{section.id}} .best-sellers__product-price .price-compare {
            font-size: 14px;
            line-height: 20px;
        }
    }

    @media screen and (max-width: 767px) {
        #s--{{section.id}} .best-sellers__product-info {
            padding: 14px 20px;
            gap: 8px;
            height: auto;
            min-height: 56px;
            left: 10px;
            bottom: 10px;
            width: calc(100% - 20px);
            max-width: 100%;
            border: 1px solid #999999;
        }

        #s--{{section.id}} .best-sellers__product-title {
            font-size: 16px;
            line-height: 22px;
            height: auto;
        }

        #s--{{section.id}} .best-sellers__product-price {
            flex-direction: column;
            align-items: flex-end;
            gap: 4px;
            height: auto;
        }

        #s--{{section.id}} .best-sellers__product-price .price-current {
            font-size: 16px;
            line-height: 22px;
            height: auto;
        }

        #s--{{section.id}} .best-sellers__product-price .price-compare {
            font-size: 14px;
            line-height: 20px;
            height: auto;
        }
    }
</style>

<div id="s--{{section.id}}" class="{% render 'common-class', section: section, class: 'row', vAlign: false %}">
    <div class="row layout__content s__content">
        {% render 'block__general--heading' with section as section %}

        <div class="best-sellers__container">
            <!-- Left column: Collections list -->
            <div class="best-sellers__collections">
                {% unless section.settings.section_label == blank %}
                    <div class="best-sellers__subtitle">{{ section.settings.section_label }}</div>
                {% endunless %}
                {% unless section.settings.title == blank %}
                    <h2 class="best-sellers__title">{{ section.settings.title }}</h2>
                {% endunless %}

                <div class="best-sellers__collection-list">
                    {%- for block in section.blocks -%}
                        {%- if block.type == 'collection' -%}
                            {% assign collection = collections[block.settings.collection] %}
                            {% assign custom_prod = block.settings.custom_product %}
                            {% assign show_item = false %}

                            {% comment %} Show item if we have custom product or collection {% endcomment %}
                            {% if custom_prod != blank %}
                                {% assign show_item = true %}
                            {% elsif collection %}
                                {% assign show_item = true %}
                            {% endif %}

                            {% if show_item %}
                                <div
                                        class="best-sellers__collection-item {% if forloop.first %}active{% endif %}"
                                        data-collection-block="{{ block.id }}"
                                        data-collection-handle="{% if collection %}{{ collection.handle }}{% endif %}"
                                        role="button"
                                        tabindex="0"
                                >
                                    {% unless block.settings.collection_title == blank %}
                                        {{ block.settings.collection_title }}
                                    {% else %}
                                        {% if collection %}
                                            {{ collection.title }}
                                        {% endif %}
                                    {% endunless %}
                                    <span>â†’</span>
                                </div>
                            {% endif %}
                        {%- endif -%}
                    {%- endfor -%}
                </div>
            </div>

            <!-- Right column: Product display -->
            <div class="best-sellers__product">
                {%- for block in section.blocks -%}
                    {%- if block.type == 'collection' -%}
                        {% assign display_product = null %}
                        {% assign custom_prod = block.settings.custom_product %}

                        {% comment %} If custom product selected, use it; otherwise use first from collection {% endcomment %}
                        {% if custom_prod != blank %}
                            {% assign display_product = custom_prod %}
                        {% elsif block.settings.collection != blank %}
                            {% assign collection = collections[block.settings.collection] %}
                            {% if collection %}
                                {% assign display_product = collection.products.first %}
                            {% endif %}
                        {% endif %}

                        {% if display_product %}
                            <div
                                    class="best-sellers__product-content {% if forloop.first %}active{% endif %}"
                                    data-product-block="{{ block.id }}"
                                    id="product-{{ block.id }}"
                            >
                                <div class="best-sellers__product-image">
                                    <!-- Product tags -->
                                    {% assign tags_count = 0 %}
                                    {% assign has_tags = false %}
                                    {% if display_product.tags.size > 0 %}
                                        {% for tag in display_product.tags %}
                                            {% if tags_count < 3 %}
                                                {% assign has_tags = true %}
                                                {% assign tags_count = tags_count | plus: 1 %}
                                            {% endif %}
                                        {% endfor %}
                                    {% endif %}

                                    {% if has_tags %}
                                        <div class="best-sellers__product-tags">
                                            {% assign tags_count = 0 %}
                                            {% for tag in display_product.tags %}
                                                {% if tags_count >= 3 %}{% break %}{% endif %}
                                                {% assign tag_lower = tag | downcase %}
                                                <span class="best-sellers__product-tag {% if tag_lower == 'sale' %}tag--sale{% endif %}">
                          {{ tag }}
                        </span>
                                                {% assign tags_count = tags_count | plus: 1 %}
                                            {% endfor %}
                                        </div>
                                    {% endif %}

                                    <!-- Product action buttons -->
                                    <div class="best-sellers__product-actions">
                                        <!-- Heart button (no functionality) -->
                                        <button
                                                type="button"
                                                class="best-sellers__product-action-btn best-sellers__product-action-btn--heart"
                                                aria-label="Add to favorites"
                                        >
                                            <svg viewBox="0 0 24 24" xmlns="http://www.w3.org/2000/svg">
                                                <path d="M20.84 4.61a5.5 5.5 0 0 0-7.78 0L12 5.67l-1.06-1.06a5.5 5.5 0 0 0-7.78 7.78l1.06 1.06L12 21.23l7.78-7.78 1.06-1.06a5.5 5.5 0 0 0 0-7.78z"/>
                                            </svg>
                                        </button>
                                        <!-- Eye button (add to cart) -->
                                        <button
                                                type="button"
                                                class="best-sellers__product-action-btn best-sellers__product-action-btn--eye"
                                                aria-label="Quick add to cart"
                                                data-product-id="{{ display_product.id }}"
                                                data-variant-id="{% if display_product.selected_or_first_available_variant %}{{ display_product.selected_or_first_available_variant.id }}{% elsif display_product.first_available_variant %}{{ display_product.first_available_variant.id }}{% endif %}"
                                                {% unless display_product.available %}disabled{% endunless %}
                                        >
                                            <svg viewBox="0 0 24 24" xmlns="http://www.w3.org/2000/svg">
                                                <path d="M1 12s4-8 11-8 11 8 11 8-4 8-11 8-11-8-11-8z"/>
                                                <circle cx="12" cy="12" r="3"/>
                                            </svg>
                                        </button>
                                    </div>

                                    <a href="{{ display_product.url }}">
                                        {% if display_product.featured_image %}
                                            <picture>
                                                <source
                                                        media="(max-width: 767px)"
                                                        srcset="{{ display_product.featured_image | img_url: '375x' }} 1x, {{ display_product.featured_image | img_url: '750x' }} 2x"
                                                >
                                                <source
                                                        media="(min-width: 768px)"
                                                        srcset="{{ display_product.featured_image | img_url: '520x' }} 1x, {{ display_product.featured_image | img_url: '1040x' }} 2x"
                                                >
                                                <img
                                                        src="{{ display_product.featured_image | img_url: '520x' }}"
                                                        alt="{{ display_product.featured_image.alt | escape }}"
                                                        width="{{ display_product.featured_image.width }}"
                                                        height="{{ display_product.featured_image.height }}"
                                                        loading="lazy"
                                                >
                                            </picture>
                                        {% else %}
                                            {{ 'product-1' | placeholder_svg_tag: 'best-sellers__placeholder' }}
                                        {% endif %}
                                    </a>

                                    <!-- Product info overlay -->
                                    <div class="best-sellers__product-info">
                                        <h3 class="best-sellers__product-title">
                                            <a href="{{ display_product.url }}">{{ display_product.title }}</a>
                                        </h3>
                                        <div class="best-sellers__product-price">
                                            <span class="price-current">{{ display_product.price | money }}</span>
                                            {% if display_product.compare_at_price > display_product.price %}
                                                <span class="price-compare">{{ display_product.compare_at_price | money }}</span>
                                            {% endif %}
                                        </div>
                                    </div>
                                </div>
                            </div>
                        {% endif %}
                    {%- endif -%}
                {%- endfor -%}
            </div>
        </div>
    </div>
</div>

<script>
    (function() {
        var sectionId = '{{section.id}}';
        var sectionSelector = '#s--' + sectionId;

        if (typeof BoosterTheme === 'undefined') {
            window.BoosterTheme = {};
        }
        if (typeof BoosterTheme.bestSellers === 'undefined') {
            BoosterTheme.bestSellers = {};
        }

        // Initialize function for this section
        function initBestSellers() {
            var section = document.querySelector(sectionSelector);
            if (!section) return;

            // Get all collection items and product contents for this section
            var collectionItems = section.querySelectorAll('.best-sellers__collection-item');
            var productContents = section.querySelectorAll('.best-sellers__product-content');

            // Switch collection function
            function switchCollection(element, blockId) {
                // Remove active class from all collection items in this section
                collectionItems.forEach(function(item) {
                    item.classList.remove('active');
                });

                // Add active class to clicked item
                if (element) {
                    element.classList.add('active');
                }

                // Hide all product contents in this section
                productContents.forEach(function(content) {
                    content.classList.remove('active');
                });

                // Show selected product content
                // The blockId might be in format "block-id" or "block-id-index" for menu items
                var productContent = section.querySelector('[id="product-' + blockId + '"]');
                if (productContent) {
                    productContent.classList.add('active');
                }
            }

            // Attach click handlers to collection items
            collectionItems.forEach(function(item) {
                item.addEventListener('click', function(e) {
                    e.preventDefault();
                    var blockId = this.getAttribute('data-collection-block');
                    if (blockId) {
                        switchCollection(this, blockId);
                    }
                });
            });

            // Handle eye button (add to cart)
            var eyeButtons = section.querySelectorAll('.best-sellers__product-action-btn--eye');
            eyeButtons.forEach(function(button) {
                button.addEventListener('click', function(e) {
                    e.preventDefault();
                    e.stopPropagation();

                    if (this.disabled) return;

                    var productId = this.getAttribute('data-product-id');
                    var variantId = this.getAttribute('data-variant-id');

                    if (!variantId) return;

                    // Disable button during request
                    this.disabled = true;
                    var originalOpacity = this.style.opacity;
                    this.style.opacity = '0.5';

                    // Add to cart
                    fetch(window.Shopify.routes.root + 'cart/add.js', {
                        method: 'POST',
                        headers: {
                            'Content-Type': 'application/json',
                        },
                        body: JSON.stringify({
                            items: [{
                                id: variantId,
                                quantity: 1
                            }]
                        })
                    })
                        .then(function(response) {
                            return response.json();
                        })
                        .then(function(data) {
                            // Re-enable button
                            button.disabled = false;
                            button.style.opacity = originalOpacity || '';

                            // Trigger cart update event if available
                            if (typeof BoosterTheme !== 'undefined' && BoosterTheme.cart) {
                                BoosterTheme.cart.update();
                            }

                            // Dispatch custom event for cart update
                            document.dispatchEvent(new CustomEvent('booster:cart:update'));
                        })
                        .catch(function(error) {
                            console.error('Error adding to cart:', error);
                            button.disabled = false;
                            button.style.opacity = originalOpacity || '';
                        });
                });
            });

            // Make function available globally for this section
            window['switchCollection_' + sectionId] = switchCollection;
        }

        // Initialize on DOM ready
        if (document.readyState === 'loading') {
            document.addEventListener('DOMContentLoaded', initBestSellers);
        } else {
            initBestSellers();
        }
    })();
</script>

