<style type="text/css">
  {% render 'common-css' with section as section %}

  /* Best Sellers Section Styles */
  #shopify-section-{{section.id}} #s--{{section.id}},
  #s--{{section.id}} {
    /* Section specific styles */
    overflow-x: hidden;
    width: 100%;
    max-width: 100%;
  }
  
  #s--{{section.id}} .s__content {
    box-sizing: border-box;
    position: relative;
    width: 100%;
    max-width: 100%;
  }
  
  /* Desktop: full width columns */
  @media screen and (min-width: 768px) {
    #s--{{section.id}} .best-sellers__collections {
      width: 100%;
      box-sizing: border-box;
    }
    
    #s--{{section.id}} .best-sellers__product {
      width: 100%;
      box-sizing: border-box;
    }
    
    #s--{{section.id}} .best-sellers__container {
      width: 100%;
      max-width: 100%;
      box-sizing: border-box;
    }
  }

  #s--{{section.id}} .best-sellers__container {
    display: grid;
    grid-template-columns: 50% 50%;
    gap: 40px;
    align-items: start;
    width: 100%;
    max-width: 100%;
  }

  @media screen and (max-width: 767px) {
    #s--{{section.id}} .best-sellers__container {
      grid-template-columns: 100%;
      gap: 30px;
      width: 100%;
      max-width: 100%;
    }
    
    /* Fix mobile padding issue */
    #s--{{section.id}} .s__content {
      padding-left: 15px !important;
      padding-right: 15px !important;
      box-sizing: border-box;
      overflow-x: hidden;
      width: 100% !important;
      max-width: 100% !important;
      margin-left: 0 !important;
      margin-right: 0 !important;
    }
    
    #s--{{section.id}} .best-sellers__container {
      width: 100% !important;
      max-width: 100% !important;
      box-sizing: border-box;
      padding-left: 0;
      padding-right: 0;
    }
  }

  /* Collection list styles */
  #s--{{section.id}} .best-sellers__collections {
    /* Collection list container */
  }

  #s--{{section.id}} .best-sellers__collection-item {
    cursor: pointer;
    padding: 15px 0;
    border-bottom: 1px solid #e5e5e5;
    transition: color 0.3s ease;
    display: flex;
    justify-content: space-between;
    align-items: center;
    user-select: none;
  }

  #s--{{section.id}} .best-sellers__collection-item:hover {
    color: #000;
  }

  #s--{{section.id}} .best-sellers__collection-item.active {
    color: #000;
    font-weight: bold;
  }

  #s--{{section.id}} .best-sellers__collection-item:not(.active) {
    color: #999;
  }

  #s--{{section.id}} .best-sellers__collection-item span {
    font-size: 18px;
  }

  /* Product display styles */
  #s--{{section.id}} .best-sellers__product {
    position: relative;
    min-height: 500px;
    width: 100%;
    height: auto;
  }

  @media screen and (max-width: 767px) {
    #s--{{section.id}} .best-sellers__product {
      min-height: 375px;
    }
  }

  #s--{{section.id}} .best-sellers__product-content {
    display: none;
    opacity: 0;
    transition: opacity 0.3s ease;
    will-change: opacity;
  }

  #s--{{section.id}} .best-sellers__product-content.active {
    display: block;
    opacity: 1;
  }

  #s--{{section.id}} .best-sellers__collection-item.switching {
    pointer-events: none;
    opacity: 0.7;
  }

  #s--{{section.id}} .best-sellers__product-image {
    position: relative;
    width: 100%;
    height: 500px;
    margin-bottom: 20px;
    overflow: hidden;
    background-color: #f5f5f5;
  }

  #s--{{section.id}} .best-sellers__product-image img,
  #s--{{section.id}} .best-sellers__product-image picture {
    width: 100%;
    height: 100%;
    object-fit: cover;
    display: block;
  }

  @media screen and (max-width: 767px) {
    #s--{{section.id}} .best-sellers__product-image {
      height: 375px;
    }
  }

  #s--{{section.id}} .best-sellers__placeholder-wrapper {
    width: 100%;
    height: 500px;
    display: flex;
    align-items: center;
    justify-content: center;
    background-color: #f5f5f5;
  }

  #s--{{section.id}} .best-sellers__placeholder {
    width: 500px !important;
    height: 500px !important;
    max-width: 100%;
    max-height: 100%;
    display: block;
    flex-shrink: 0;
  }
  
  #s--{{section.id}} .best-sellers__placeholder svg {
    width: 500px !important;
    height: 500px !important;
    max-width: 100%;
    max-height: 100%;
  }

  @media screen and (max-width: 767px) {
    #s--{{section.id}} .best-sellers__placeholder-wrapper {
      height: 375px;
    }
    
    #s--{{section.id}} .best-sellers__placeholder {
      width: 375px !important;
      height: 375px !important;
      max-width: 100%;
      max-height: 100%;
    }
    
    #s--{{section.id}} .best-sellers__placeholder svg {
      width: 375px !important;
      height: 375px !important;
      max-width: 100%;
      max-height: 100%;
    }
  }

  /* Product tags styles */
  #s--{{section.id}} .best-sellers__product-tags {
    position: absolute;
    top: 15px;
    left: 15px;
    display: flex;
    flex-direction: column;
    gap: 8px;
    z-index: 10;
    pointer-events: none;
  }

  #s--{{section.id}} .best-sellers__product-tag {
    display: inline-block;
    padding: 6px 12px;
    font-size: 12px;
    font-weight: 600;
    text-transform: uppercase;
    border-radius: 4px;
    white-space: nowrap;
    background-color: #000;
    color: #fff;
    line-height: 1.2;
  }

  #s--{{section.id}} .best-sellers__product-tag.tag--sale {
    background-color: #e53e3e;
    color: #fff;
  }

  @media screen and (max-width: 767px) {
    #s--{{section.id}} .best-sellers__product-tags {
      top: 10px;
      left: 10px;
      gap: 6px;
    }

    #s--{{section.id}} .best-sellers__product-tag {
      padding: 5px 10px;
      font-size: 11px;
    }
  }

  #s--{{section.id}} .best-sellers__product-info {
    /* Product info container */
  }
</style>

<div id="s--{{section.id}}" class="{% render 'common-class', section: section, class: 'row', vAlign: false %}">
  <div class="row layout__content s__content">
    {% render 'block__general--heading' with section as section %}
    
    <div class="best-sellers__container">
      <!-- Left column: Collections list -->
      <div class="best-sellers__collections">
        <div class="best-sellers__subtitle">Best sellers</div>
        <h2 class="best-sellers__title">Trending Products</h2>
        
        <div class="best-sellers__collection-list">
          {%- for block in section.blocks -%}
            {% assign collection = collections[block.settings.collection] %}
            {% if collection %}
              <div 
                class="best-sellers__collection-item {% if forloop.first %}active{% endif %}"
                data-collection-block="{{ block.id }}"
                data-collection-handle="{{ collection.handle }}"
                role="button"
                tabindex="0"
              >
                {% unless block.settings.collection_title == blank %}
                  {{ block.settings.collection_title }}
                {% else %}
                  {{ collection.title }}
                {% endunless %}
                <span>â†’</span>
              </div>
            {% endif %}
          {%- endfor -%}
        </div>
      </div>

      <!-- Right column: Product display -->
      <div class="best-sellers__product">
        {%- for block in section.blocks -%}
          {% assign collection = collections[block.settings.collection] %}
          {% if collection %}
            {% if block.settings.product %}
              {% assign display_product = block.settings.product %}
            {% else %}
              {% assign display_product = collection.products.first %}
            {% endif %}

            {% if display_product %}
              <div 
                class="best-sellers__product-content {% if forloop.first %}active{% endif %}"
                data-product-block="{{ block.id }}"
                id="product-{{ block.id }}"
              >
                <div class="best-sellers__product-image">
                  <!-- Product tags -->
                  {% assign tags_count = 0 %}
                  {% assign has_tags = false %}
                  {% if display_product.tags.size > 0 %}
                    {% for tag in display_product.tags %}
                      {% if tags_count < 3 %}
                        {% assign has_tags = true %}
                        {% assign tags_count = tags_count | plus: 1 %}
                      {% endif %}
                    {% endfor %}
                  {% endif %}
                  
                  {% if has_tags %}
                    <div class="best-sellers__product-tags">
                      {% assign tags_count = 0 %}
                      {% for tag in display_product.tags %}
                        {% if tags_count >= 3 %}{% break %}{% endif %}
                        {% assign tag_lower = tag | downcase %}
                        <span class="best-sellers__product-tag {% if tag_lower == 'sale' %}tag--sale{% endif %}">
                          {{ tag }}
                        </span>
                        {% assign tags_count = tags_count | plus: 1 %}
                      {% endfor %}
                    </div>
                  {% endif %}

                  <a href="{{ display_product.url }}">
                    {% if display_product.featured_image %}
                      <picture>
                        <source 
                          media="(max-width: 767px)" 
                          srcset="{{ display_product.featured_image | img_url: '375x' }} 1x, {{ display_product.featured_image | img_url: '750x' }} 2x"
                        >
                        <source 
                          media="(min-width: 768px)" 
                          srcset="{{ display_product.featured_image | img_url: '520x' }} 1x, {{ display_product.featured_image | img_url: '1040x' }} 2x"
                        >
                        <img 
                          src="{{ display_product.featured_image | img_url: '520x' }}"
                          alt="{{ display_product.featured_image.alt | escape }}"
                          width="{{ display_product.featured_image.width }}"
                          height="{{ display_product.featured_image.height }}"
                          loading="lazy"
                        >
                      </picture>
                    {% else %}
                      <div class="best-sellers__placeholder-wrapper">
                        {{ 'product-1' | placeholder_svg_tag: 'best-sellers__placeholder' }}
                      </div>
                    {% endif %}
                  </a>
                </div>

                <div class="best-sellers__product-info">
                  <h3 class="best-sellers__product-title">
                    <a href="{{ display_product.url }}">{{ display_product.title }}</a>
                  </h3>
                  <div class="best-sellers__product-price">
                    <span class="price-current">{{ display_product.price | money }}</span>
                    {% if display_product.compare_at_price > display_product.price %}
                      <span class="price-compare">{{ display_product.compare_at_price | money }}</span>
                    {% endif %}
                  </div>
                </div>
              </div>
            {% endif %}
          {% endif %}
        {%- endfor -%}
      </div>
    </div>
  </div>
</div>

<script>
  (function() {
    var sectionId = '{{section.id}}';
    var sectionSelector = '#s--' + sectionId;
    
    if (typeof BoosterTheme === 'undefined') {
      window.BoosterTheme = {};
    }
    if (typeof BoosterTheme.bestSellers === 'undefined') {
      BoosterTheme.bestSellers = {};
    }
    
    // Initialize function for this section
    function initBestSellers() {
      var section = document.querySelector(sectionSelector);
      if (!section) return;
      
      // Get all collection items and product contents for this section
      var collectionItems = section.querySelectorAll('.best-sellers__collection-item');
      var productContents = section.querySelectorAll('.best-sellers__product-content');
      
      // Switch collection function
      function switchCollection(element, blockId) {
        // Prevent multiple clicks
        if (element && element.classList.contains('switching')) {
          return;
        }
        
        if (element) {
          element.classList.add('switching');
        }
        
        // Remove active class from all collection items in this section
        collectionItems.forEach(function(item) {
          item.classList.remove('active');
        });
        
        // Add active class to clicked item
        if (element) {
          element.classList.add('active');
        }
        
        // Fade out current active content
        var currentActive = section.querySelector('.best-sellers__product-content.active');
        if (currentActive) {
          currentActive.style.opacity = '0';
          setTimeout(function() {
            currentActive.classList.remove('active');
            
            // Show new content after fade out
            var productContent = section.querySelector('#product-' + blockId);
            if (productContent) {
              productContent.classList.add('active');
              // Force reflow
              productContent.offsetHeight;
              productContent.style.opacity = '1';
            }
            
            if (element) {
              element.classList.remove('switching');
            }
          }, 200);
        } else {
          // If no active content, show immediately
          var productContent = section.querySelector('#product-' + blockId);
          if (productContent) {
            productContent.classList.add('active');
            productContent.style.opacity = '1';
          }
          
          if (element) {
            element.classList.remove('switching');
          }
        }
      }
      
      // Attach click handlers to collection items
      collectionItems.forEach(function(item) {
        item.addEventListener('click', function(e) {
          e.preventDefault();
          var blockId = this.getAttribute('data-collection-block');
          if (blockId) {
            switchCollection(this, blockId);
          }
        });
      });
      
      // Make function available globally for this section
      window['switchCollection_' + sectionId] = switchCollection;
    }
    
    // Initialize on DOM ready
    if (document.readyState === 'loading') {
      document.addEventListener('DOMContentLoaded', initBestSellers);
    } else {
      initBestSellers();
    }
  })();
</script>

